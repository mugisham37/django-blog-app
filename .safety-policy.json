{
  "security": {
    "ignore-cvss-severity-below": 7.0,
    "ignore-cvss-unknown-severity": false,
    "ignore-vulnerabilities": {
      "70612": {
        "reason": "Jinja2 vulnerability only affects development dependencies",
        "expires": "2024-12-31"
      }
    },
    "continue-on-vulnerability-error": false
  },
  "alert": {
    "ignore-unpinned-requirements": false,
    "ignore-environment-requirements": true
  },
  "report": {
    "only-report": false,
    "output": {
      "format": "json",
      "file": "safety-report.json"
    }
  },
  "scan": {
    "max-depth": 10,
    "exclude": [
      "tests/",
      "docs/",
      "node_modules/",
      ".venv/",
      "venv/"
    ]
  }
}