# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Configuration
ENVIRONMENT=production
DEBUG=false
SERVICE_VERSION=1.0.0
DOMAIN_NAME=yourdomain.com
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
POSTGRES_DB=fullstack_prod
POSTGRES_USER=fullstack_user
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_HOST=postgres-primary
POSTGRES_PORT=5432
POSTGRES_REPLICA_HOST=postgres-replica
POSTGRES_REPLICATION_USER=replication_user
POSTGRES_REPLICATION_PASSWORD=your_secure_replication_password_here

# Redis Configuration
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# Security Configuration
SECRET_KEY=your_very_long_and_secure_django_secret_key_here
JWT_PRIVATE_KEY=your_jwt_private_key_here
JWT_PUBLIC_KEY=your_jwt_public_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email Configuration
EMAIL_HOST=smtp.yourmailprovider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password_here
EMAIL_USE_TLS=true
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# AWS Configuration (for backups and CDN)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
BACKUP_S3_BUCKET=your-backup-bucket-name

# CDN Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFRONT_DISTRIBUTION_ID=your_cloudfront_distribution_id_here

# Monitoring Configuration
ELASTIC_PASSWORD=your_secure_elasticsearch_password_here
KIBANA_ENCRYPTION_KEY=your_32_character_kibana_encryption_key_here
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# Security Services Configuration
OPENVAS_PASSWORD=your_secure_openvas_password_here
WAZUH_INDEXER_PASSWORD=your_secure_wazuh_password_here
VAULT_ROOT_TOKEN=your_secure_vault_root_token_here

# SSL/TLS Configuration
CERTBOT_EMAIL=admin@yourdomain.com
SSL_CERTIFICATE_PATH=/etc/ssl/certs/yourdomain.com.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/yourdomain.com.key

# Alert Configuration
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USERNAME=alerts@yourdomain.com
SMTP_PASSWORD=your_smtp_password_here
ALERT_FROM_EMAIL=alerts@yourdomain.com
DEFAULT_ALERT_EMAIL=admin@yourdomain.com
CRITICAL_ALERT_EMAIL=critical@yourdomain.com
DATABASE_TEAM_EMAIL=database@yourdomain.com
DEVOPS_TEAM_EMAIL=devops@yourdomain.com
DEVELOPMENT_TEAM_EMAIL=dev@yourdomain.com
SECURITY_TEAM_EMAIL=security@yourdomain.com
WARNING_ALERT_EMAIL=warnings@yourdomain.com
PERFORMANCE_TEAM_EMAIL=performance@yourdomain.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SECURITY_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SECURITY/WEBHOOK

# PagerDuty Integration
PAGERDUTY_ROUTING_KEY=your_pagerduty_routing_key_here

# Performance Monitoring
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Rate Limiting
API_RATE_LIMIT=1000  # requests per hour per IP
LOGIN_RATE_LIMIT=5   # login attempts per 5 minutes per IP

# Cache Configuration
CACHE_TTL=3600  # 1 hour default TTL
CACHE_MAX_ENTRIES=10000

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Session Configuration
SESSION_COOKIE_AGE=86400  # 24 hours
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_MFA=true
ENABLE_ANALYTICS=true
ENABLE_NEWSLETTER=true

# Third-party Integrations
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token_here

# Search Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX_PREFIX=fullstack_prod

# Mobile App Configuration (if applicable)
MOBILE_APP_VERSION=1.0.0
PUSH_NOTIFICATION_KEY=your_push_notification_key_here

# Development Tools (disabled in production)
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SILK_PROFILER=false
ENABLE_DJANGO_EXTENSIONS=false

# Compliance and Audit
AUDIT_LOG_RETENTION_DAYS=365
GDPR_COMPLIANCE_MODE=true
DATA_RETENTION_DAYS=2555  # 7 years

# Performance Tuning
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
GUNICORN_TIMEOUT=30
GUNICORN_KEEPALIVE=5

# Database Connection Pooling
DB_CONN_MAX_AGE=300
DB_CONN_POOL_SIZE=20
DB_CONN_POOL_OVERFLOW=10

# Next.js Configuration
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_WS_URL=wss://yourdomain.com/ws
NEXT_PUBLIC_DOMAIN=yourdomain.com
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Build Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1