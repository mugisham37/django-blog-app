# Docker Environment Configuration
# Copy this file to .env.docker and update the values

# Database Configuration
POSTGRES_DB=fullstack_blog
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_postgres_password_change_me
DATABASE_URL=postgresql://postgres:secure_postgres_password_change_me@postgres:5432/fullstack_blog

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_change_me
REDIS_URL=redis://:secure_redis_password_change_me@redis:6379/0
CELERY_BROKER_URL=redis://:secure_redis_password_change_me@redis:6379/1

# Django Configuration
SECRET_KEY=your-super-secret-django-key-change-this-in-production
DEBUG=0
ALLOWED_HOSTS=localhost,127.0.0.1,django-api,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=1
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# AWS S3 Configuration (for production media storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
USE_S3=0

# Next.js Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=Enterprise Blog
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-url
GRAFANA_PASSWORD=secure_grafana_password_change_me

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket-name 