# Development Environment Configuration
# Copy this file to .env.development for development-specific settings

# ===================================
# Development Environment
# ===================================

NODE_ENV=development
DJANGO_ENV=development
DEBUG=true
DJANGO_DEBUG=true

# ===================================
# Development URLs
# ===================================

NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WEB_URL=http://localhost:3000
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,host.docker.internal

# ===================================
# Development Database
# ===================================

DATABASE_URL=postgresql://dev_user:dev_password@localhost:5432/fullstack_monolith_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fullstack_monolith_dev
DB_USER=dev_user
DB_PASSWORD=dev_password

# ===================================
# Development Redis
# ===================================

REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CHANNELS_REDIS_URL=redis://localhost:6379/2

# ===================================
# Development Security (Weak keys for dev only)
# ===================================

DJANGO_SECRET_KEY=dev-secret-key-not-for-production
JWT_SECRET_KEY=dev-jwt-secret-not-for-production
NEXTAUTH_SECRET=dev-nextauth-secret-not-for-production

# ===================================
# Development Email (Console backend)
# ===================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# ===================================
# Development Features
# ===================================

DJANGO_DEBUG_TOOLBAR=true
DJANGO_EXTENSIONS=true
NEXT_PUBLIC_HOT_RELOAD=true

# Development logging
LOG_LEVEL=DEBUG
DJANGO_LOG_LEVEL=DEBUG

# Development caching (shorter TTL)
CACHE_TTL=60  # 1 minute

# Development rate limiting (more permissive)
RATE_LIMIT_PER_MINUTE=1000

# Development session settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_AGE=86400  # 1 day

# Development file storage
USE_S3=false
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/