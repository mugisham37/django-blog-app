{
  "name": "@enterprise-blog/tests",
  "version": "1.0.0",
  "description": "Comprehensive testing suite for the enterprise blog platform",
  "private": true,
  "scripts": {
    "test": "node ../tools/test-runner.js",
    "test:unit": "jest --config=jest.config.js --testPathPattern=frontend|packages",
    "test:integration": "jest --config=jest.config.js --testPathPattern=integration",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:api": "newman run api/postman-collection.json -e api/environments/development.json",
    "test:performance": "k6 run performance/load-test.js",
    "test:stress": "k6 run performance/stress-test.js",
    "test:packages": "jest --config=jest.config.js --testPathPattern=packages",
    "test:django": "python -m pytest django/ -v",
    "test:django:unit": "python -m pytest django/ -m unit -v",
    "test:django:integration": "python -m pytest django/ -m integration -v",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:watch": "jest --config=jest.config.js --watch",
    "test:ci": "node ../tools/test-runner.js --suite=all --no-coverage",
    "coverage:report": "nyc report --reporter=html --reporter=text --reporter=lcov",
    "coverage:merge": "nyc merge coverage .nyc_output/coverage.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "setup": "npm install && pip install -r requirements.txt",
    "clean": "rimraf coverage reports artifacts .nyc_output",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "msw": "^2.0.8",
    "newman": "^6.0.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "chalk": "^4.1.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "./jest.config.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
